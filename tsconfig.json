{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"lib": ["ES2020"],
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node"
	},
	"ts-node": {
		"skipLibCheck": true
	},
	"include": [
		"nodes/**/*",
		"credentials/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}

